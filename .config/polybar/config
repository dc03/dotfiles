menu-0-0-exec = #cfg.open.1
menu-0-1 = 
menu-0-1-exec = #cfg.open.2

menu-1-0 = on
menu-1-0-exec = dunstctl set-paused true
menu-1-1 = off
menu-1-1-exec = dunstctl set-paused false

menu-2-0 = 
menu-2-0-exec = #cfg.open.3
menu-2-1 = 
menu-2-1-exec = #cfg.open.4
